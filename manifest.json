{
    "manifest_version": 2,
    "name": "User Agent Switcher",
    "description": "Change your user agent quickly and easily",
    "version": "1.0.1",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
        "js":        ["content_script.js"],
        "matches":   ["<all_urls>"],
        "run_at":    "document_start"
        }
    ]
}